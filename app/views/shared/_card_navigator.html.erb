<div class="side-container">
  <h2><%= story.title %></h2>
  <div class="cards-container">
    <% story.timeline.each do |card| %>
      <div class="card-container <%= "just-caption" if card.photo.empty? %>">
        <% if card.photo.present? %>
          <%= link_to edit_story_card_path(story, card) do %>
            <%= image_tag(card.photo) %>
          <% end %>
        <% else %>
            <%= link_to edit_story_card_path(story, card) do %>
              <%= card.caption %>
            <% end %>
        <% end %>
      </div>
    <% end %>

    <% if story.timeline.empty? %>
      <div class="empty-card"></div>
    <% end %>
  </div>
</div>
