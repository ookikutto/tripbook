<p id="notice"><%= notice %></p>

<h1>Image Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @image_comments.each do |image_comment| %>
      <tr>
        <td><%= image_comment.user_id %></td>
        <td><%= link_to 'Show', image_comment %></td>
        <td><%= link_to 'Edit', edit_image_comment_path(image_comment) %></td>
        <td><%= link_to 'Destroy', image_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Image Comment', new_image_comment_path %>
