<% @target = @user || @place %>
<span class="stories-count">
  Stories
  <strong><%= @target.stories.count %></strong>
</span>
<span class="followers-count">
  Followers:
  <strong><%= @target.followers.count %></strong>
</span>
<% if @target.is_user? %>
  <span class="following-count">
    Following:
    <strong><%= @target.following_count %></strong>
  </span>
<% end %>
<%= render "shared/followables/follow_form" %>

<% if @target.is_user? %>
  <h4>Places that <%= @user.name %> has visited:</h4>
  <ul>
    <% @user.places.each do |place| %>
      <li><%= place.name %></li>
    <% end %>
  </ul>
<% end %>
