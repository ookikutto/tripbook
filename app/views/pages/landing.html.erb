<% unless current_user %>
    <div class="container landing-page">
      <div class="hero-image">
        <div class="header">
          <div class="brandname">
            <%= link_to "TRIPBOOK", root_path %>
          </div>
          <div class="authen-buttons">
            <%= link_to new_user_session_path, :class => "sign-in-btn btn" do %>
                <%= t 'auth.login' %>
            <% end %>
            <%= link_to new_user_registration_path, :class => "sign-up-btn btn" do %>
                <%= t 'auth.register' %>
            <% end %>
          </div>
        </div>
        <div class="hero-text">
          <h1>TripBookに接続する</h1>
          <p>世界各地からの旅行情報を発見して共有しましょう。</p>
          <%= link_to new_user_registration_path, :class => "btn" do %>
              サインアップ
          <% end %>
        </div>
      </div>

      <div class="search-upload row">
        <div class="col-md-6 col-md-offset-1 search-wrapper">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="<%= t 'header.search-placeholder' %>">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </div>
        <p class="col-md-1 hidden-xs">または</p>
        <div class="col-md-2">
          <%= link_to new_user_session_path, :class => "upload-btn btn" do %>
              自身のアップロード
          <% end %>
        </div>
      </div>

      <!-- start trending for guest -->
      <div class="trending-for-guest row">
        <p class="title">ここでは、TripBookコミュニティからのトレンドのストーリーです。</p>

        <!-- start story block -->
        <% @trendings.each do |story| %>
          <div class="col-sm-4 story-item">
            <div class="story-wrapper" style="background-image: url(<%= story.featured %>);">
              <%= link_to "", story_path(story), class: 'story-detail-link' %>
              <div class="uploader-area">
                <a href="#uploader-profile">
                  <div class="uploader-wrapper">
                    <div class="profile-pic" style="background-image: url(//imghtlak.mmtcdn.com/blog/sites/default/files/styles/47x47/public/pictures/picture-155481-1480931403.png);"></div>
                    <p class="name"><%= story.user.email %></p>
                  </div>
                </a>
              </div>
              <p class="story-title"><%= truncate story.title, length: 30 %></p>
              <div class="story-stat">
                <div class="like-count">
                  <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> 2037
                </div>
                <div class="comment-count">
                  <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> 31
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <!-- end story block -->

        <div class="row text-center">
          <a href="#trending-page" class="btn trending-btn">Explore our trending stories</a>
        </div>

      </div>
      <!-- end trending for guest -->

      <!-- start map -->
      <section>
        <div class="map-wrapper" style="height: 360px; border: 1px solid #000 ">
          <div class="map">
            <h1 class="text-center">MAP</h1>
          </div>
        </div>
      </section>
      <!-- end map -->

      <section class="place">
        <div class="row">
          <h2 class="text-center">場所</h2>
        </div>
        <br>
        <div class="row trending-for-guest">
          <div class="col-sm-6 story-item">
            <div class="story-wrapper place-wrapper" style="background-image: url(http://lorempixel.com/640/480/city);">
              <p class="story-title">New York</p>
            </div>
          </div>
          <div class="col-sm-6 story-item">
            <div class="story-wrapper place-wrapper" style="background-image: url(http://lorempixel.com/640/480/city);">
              <p class="story-title">京都</p>
            </div>
          </div>
        </div>
        <div class="row trending-for-guest">
          <div class="col-sm-4 story-item">
            <div class="story-wrapper place-wrapper" style="background-image: url(http://lorempixel.com/640/480/city);">
              <p class="story-title">東京</p>
            </div>
          </div>
          <div class="col-sm-4 story-item">
            <div class="story-wrapper place-wrapper" style="background-image: url(http://lorempixel.com/640/480/city);">
              <p class="story-title">広島</p>
            </div>
          </div>
          <div class="col-sm-4 story-item">
            <div class="story-wrapper place-wrapper" style="background-image: url(http://lorempixel.com/640/480/city);">
              <p class="story-title">北海道</p>
            </div>
          </div>
        </div>
      </section>

    </div>
<% end %>
