<div class="col-sm-<%= col_width || 6 %>">
  <a href="<%= user_path(user) %>"class="circle" style="background-image:
       url(<%= user.avatar || "//imghtlak.mmtcdn.com/blog/sites/default/files/styles/47x47/public/pictures/picture-155481-1480931403.png" %>)">
  </a>
  <p class="text-center" style="color: #fff; text-shadow: 1px 1px 4px black;"><%= user.name || user.email %></p>

<style>
  .circle {
    cursor: pointer;
    display: block;
    width: 50px;
    height: 50px;
    margin: 1em auto;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    -webkit-border-radius: 99em;
    -moz-border-radius: 99em;
    border-radius: 99em;
    border: 2px solid #eee;
    box-shadow: 0 3px 2px rgba(0, 0, 0, 0.3);
  }
</style>

</div>
