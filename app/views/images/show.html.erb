<p id="notice"><%= notice %></p>

<div class="container image-show-page">
  <!-- start slideshow container -->
  <div class="col-md-8 slideshow-container">
    <div class="mySlides fade-animation">
      <div class="numbertext">1 / 3</div>
      <img src="https://upload-photo.s3.amazonaws.com/uploads/image/file/1/3c512251143103316637444125_700wa_0.gif" style="width:100%">
      <div class="text">Caption Text</div>
    </div>

    <div class="mySlides fade-animation">
      <div class="numbertext">2 / 3</div>
      <img src="https://upload-photo.s3.amazonaws.com/uploads/image/file/2/dogesmall.jpg" style="width:100%">
      <div class="text">Caption Two</div>
    </div>

    <div class="mySlides fade-animation">
      <div class="numbertext">3 / 3</div>
      <img src="https://upload-photo.s3.amazonaws.com/uploads/image/file/3/perry.png" style="width:100%">
      <div class="text">Caption Three</div>
    </div>

    <a class="prev slideshow-prev">&#10094;</a>
    <a class="next slideshow-next">&#10095;</a>
    <a class="toggle-info">
      <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
    </a>
    <br>
    <div style="text-align:center">
      <span class="dot slideshow-current" data-index="1"></span>
      <span class="dot slideshow-current" data-index="2"></span>
      <span class="dot slideshow-current" data-index="3"></span>
    </div>
  </div>
  <!-- end slideshow container -->

  <!-- start comment container (right part) -->
  <div class="col-md-4 comment-container story-wrapper">
    <!-- start uploader info -->
    <div class="uploader-info">
      <a href="#uploader-profile" class="profile-pic">
        <div class="profile-pic-img" style="background-image: url(//imghtlak.mmtcdn.com/blog/sites/default/files/styles/47x47/public/pictures/picture-155481-1480931403.png);"></div>
      </a>
      <div class="left">
        <a href="#uploader-profile" class="name"><%= truncate(current_user.email, length: 30) %></a>
        <p class="date-upload" id="hover-content"> uploaded 7h ago</p>
      </div>
      <% if current_user.id == @image.user_id %>
          <div class="right">
            <div class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <span class="caret"></span></a>
              <ul class="dropdown-menu dropdown-menu-right">
                <li>
                  <%= link_to 'Edit my post', edit_image_path(@image) %>
                </li>
                <li><%= link_to 'Destroy', @image, method: :delete, data: {confirm: 'Are you sure?'} %></li>
              </ul>
            </div>
          </div>
      <% end %>
    </div>
    <!-- end uploader info -->

    <!-- start comment wrapper -->
    <div class="comment-wrapper fade-animation fade-out-animation">
      <!-- start comment form -->
      <div class="comment-form">
        <div class="avatar">
          <div class="profile-pic-img" style="background-image: url(//imghtlak.mmtcdn.com/blog/sites/default/files/styles/47x47/public/pictures/picture-155481-1480931403.png);"></div>
        </div>
        <div class="comment-input">
          <%= form_for(@image_comment) do |f| %>
              <div>
                <%= f.text_field :comment, :class => "form-control", :placeholder => "Write a comment" %>
                <%= f.hidden_field :image_id, :value => @image.id %>
                <!--<div class="input-group-btn">-->
                <!--<%= f.submit "Send comment", :class => "btn btn-default" do %>-->
                    <!--<i class="glyphicon glyphicon-search"></i>-->
                    <!--
            <% end %>-->
                <!--</div>-->
              </div>
          <% end %>
        </div>
      </div>
      <!-- end comment form -->

      <!-- start comment show all -->
      <div class="comment-show-all">
        <% if @image.image_comment.count>0 %>
            <div class="comment-count">
              <span class="glyphicon glyphicon-comment" aria-hidden="true"></span> <%= @image.image_comment.count %>
              comments
            </div>
        <% end %>
        <div>
          <% @image.image_comment.each do |image_comment| %>
              <div class="comment-item">
                <p class="username-comment"><%= image_comment.user.email %> <span class="comment-content"><%= image_comment.comment %></span>
                </p>
              </div>
          <% end %>
        </div>
      </div>
      <!-- end comment show all -->
    </div>
    <!-- end comment wrapper -->
  </div>
  <!-- end comment container (right part) -->
</div>
