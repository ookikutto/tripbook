<div class="home-page">
  <div class="row">
    <div class="col-md-8 col-sm-12 ">
      <% @feeds.each do |story| %>
          <%= render partial: 'stories/story', locals: {story: story} %>
      <% end %>
    </div>

    <div class="col-md-4 right-area">
      <h2 class="text-center">お勧めのストーリー</h2>
      <div class="row">
        <% current_user.recommended_stories(4).each do |story| %>
        <%# Story.limit(3).each do |story| %>
          <%= render partial: "stories/story_thumbnail", locals: {story: story, col_width: 6} %>
        <% end %>
      </div>

      <hr>

      <h2 class="text-center">トップ場所</h2>
      <div class="row">
        <% Place.top(4).each do |place| %>
          <% if place.present? && place.valid? %>
            <%= render partial: "places/place_thumbnail", locals: {place: place, col_width: 6} %>
          <% end %>
        <% end %>
      </div>

      <hr>

      <h2 class="text-center">トップウーザー</h2>
      <div class="row">
        <% User.top(4).each do |user| %>
          <%= render partial: "users/user_thumbnail", locals: {user: user, col_width: 6} %>
        <% end %>
      </div>

    </div>
  </div>
</div>
